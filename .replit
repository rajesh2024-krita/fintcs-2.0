run = "npm run watch"
modules = ["nodejs-20", "dotnet-7.0", "web"]
[nix]
channel = "stable-25_05"

[workflows]
runButton = "Run Frontend"

[[workflows.workflow]]
name = "Run Frontend"
author = 46973122
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Run Backend"
author = 46973122
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/Fintcs.Api"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet restore"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet ef database update"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --urls=http://0.0.0.0:5000"

[[ports]]
localPort = 4200
externalPort = 80

[deployment]
run = ["sh", "-c", "npm run watch"]
